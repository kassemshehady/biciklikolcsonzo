@model Bicikli_Admin.Models.LoginModel
@{
    ViewBag.Title = "Bejelentkezés";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.ValidationSummary(true, "A bejelentkezés sikertelen volt.")

    <fieldset>
        <legend>Bejelentkezési adatok</legend>

        <table class="invisible">
            <tr>
                <td class="label-col">
                    @Html.LabelFor(m => m.UserName)
                </td>
                <td>
                    @Html.TextBoxFor(m => m.UserName)
                </td>
                <td class="validation-col">
                    <label>@Html.ValidationMessageFor(m => m.UserName, "(!)")</label>
                </td>
            </tr>
            <tr>
                <td class="label-col">
                    @Html.LabelFor(m => m.Password)
                </td>
                <td>
                    @Html.PasswordFor(m => m.Password)
                </td>
                <td class="validation-col">
                    <label>@Html.ValidationMessageFor(m => m.Password, "(!)")</label>
                </td>
            </tr>
            <tr>
                <td class="label-col">
                    @Html.LabelFor(m => m.RememberMe)
                </td>
                <td>
                    @Html.CheckBoxFor(m => m.RememberMe)
                </td>
                <td class="validation-col"></td>
            </tr>
        </table>
    </fieldset>
    
    <div class="form-buttons">
        <button type="submit">Belépés</button>
    </div>
    <p>
        @Html.ActionLink("Regisztráljon", "Register"), ha nincs még hozzáférése.
    </p>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
