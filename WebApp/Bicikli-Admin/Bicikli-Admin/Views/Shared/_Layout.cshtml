				<div class="dropdown-group">
					<button class="dropdown-toggle">Kölcsönzők<span class="triangle-down"></span></button>
					<div class="dropdown-menu">
						@Html.ActionLink("Home", "Index", "Home")
						@Html.ActionLink("About", "About", "Home")
						@Html.ActionLink("Contact", "Contact", "Home")
					</div>
				</div>
				<div class="dropdown-group">
					<button class="dropdown-toggle">Felhasználók<span class="triangle-down"></span></button>
					<div class="dropdown-menu">
						<a href="#">TakRaj</a>
						<a href="#">TakRaj</a>
						<a href="#">TakRaj</a>
					</div>
				</div>
				<div class="dropdown-group">
					<button class="dropdown-toggle">Veszélyes zónák<span class="triangle-down"></span></button>
					<div class="dropdown-menu">
						<a href="#">TakRaj</a>
						<a href="#">TakRaj</a>
						<a href="#">TakRaj</a>
					</div>
				</div>
				<div class="dropdown-group">
					<button class="dropdown-toggle active">Kerékpárok<span class="triangle-down"></span></button>
					<div class="dropdown-menu">
						<a href="#">TakRaj</a>
						<a href="#">TakRaj</a>
						<a href="#">TakRaj</a>
					</div>
				</div>
				<div class="dropdown-group">
					<button class="dropdown-toggle">Számlák<span class="triangle-down"></span></button>
					<div class="dropdown-menu">
						<a href="#">TakRaj</a>
						<a href="#">TakRaj</a>
						<a href="#">Schwinn-MTB-007</a>
					</div>
				</div>
			</nav>
		</div>
		
		<div id="page-body">
			@RenderBody()
		</div>
		
		<footer>
			<p>
				Design & Code by TakRaj
			</p>
		</footer>
		
		<!-- SCRIPTS -->
		@Scripts.Render("~/bundles/jquery")
		@Scripts.Render("~/Content/js")

        @RenderSection("scripts", required: false)
	</body>
</html>
