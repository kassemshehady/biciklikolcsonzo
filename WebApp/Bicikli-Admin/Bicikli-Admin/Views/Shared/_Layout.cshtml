<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title - Bicikli-Admin v1.0</title>
    @Styles.Render("~/Content/css", "~/Content/themes/base/css")
</head>
<body>
		<header>
			<h1>Bicikli-Admin v1.0</h1>
		</header>
		
		<div id="menubar">
			@Html.Partial("_LoginPartial")
